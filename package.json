        "eslint": "^7.32.0",
        "eslint-plugin-svelte3": "^3.2.0",
        "prettier": "^2.3.2",
        "prettier-plugin-svelte": "^2.3.1",
        "rollup": "^2.56.2",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-serve": "^1.1.0",
        "rollup-plugin-svelte": "^7.1.0",
        "svelte": "^3.42.1",
